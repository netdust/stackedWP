# ------------------------------------------------------------------------------------------------#
#                                     Vite (Dev/Build) Settings
# ------------------------------------------------------------------------------------------------#

# THEME SLUG used to compute build output path:
#   /app/content/themes/${VITE_THEME}/public
# Make sure it matches an existing theme folder under app/content/themes
VITE_THEME=ntdstheme

# Entry point for your front-end (relative to project root)
VITE_ENTRY_POINT=src/main.js

# Dev server protocol/host/port
# VITE_HOST is where Vite listens (inside container/host); usually 0.0.0.0
# If not provided, it will be derived from WP_HOME
VITE_PROTOCOL=https
VITE_HOST=localhost
VITE_PORT=5181
VITE_STRICT_PORT=true

# Optional: used by enqueue helpers if you implement them
WP_ENQUEUE_ID=ntdst_vite

# WordPress
WP_HOME=https://ludoluykx.ddev.site