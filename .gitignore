# ignore everything in the root except the "src" directory.
/*
!src/

# Ignore framework directories everywhere
**/wp/
**/vendor/
**/node_modules/

# Ignore files starting with . or ~
.*
~*

# Ignore DS_Store files generated by Finder on MacOS
**/.DS_Store

# Ignore OS-generated files
ehthumbs.db
Thumbs.db
.rnd

# Ignore log files and databases
*.log
*.sql
*.sqlite

# Ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so

# Ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# -------------------------
# Whitelisted Files
# -------------------------

# Track these files, if they exist
!.htaccess
!.gitignore
!.gitmodules
!.editorconfig
!.phpcs.xml.dist
!README.md
!CHANGELOG.md
!composer.json
!package.json
!vite.config.js
!wp-cli.yml
!Makefile

# Track favicon files, if they exist
!android-chrome-*.png
!apple-touch-icon*.png
!browserconfig.xml
!favicon*.png 
!favicon*.ico
!manifest.json
!mstile-*.png
!safari-pinned-tab.svg
!site.webmanifest

# -------------------------
# App directory rules
# -------------------------

# Un-ignore /app
!/app/

# Ignore all subfolder by default
/app/content/**

# Un-ignore your specific plugins
!/app/content/plugins/plugin-name-to-keep/

# Un-ignore specific files in /app root (if needed)
!/app/.htaccess
!/app/index.php
!/app/wp-config.php
