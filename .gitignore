# Ignore everything in the root
/*

# Ignore framework directories everywhere
**/wp/
**/vendor/
**/node_modules/

# Ignore files starting with . or ~
.*
~*

# Ignore DS_Store files generated by Finder on MacOS
**/.DS_Store

# Ignore OS-generated files
ehthumbs.db
Thumbs.db
.rnd

# Ignore log files and databases
*.log
*.sql
*.sqlite

# Ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so

# Ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# -------------------------
# Whitelisted Files
# -------------------------

# Track these files, if they exist
!.htaccess
!.gitignore
!.gitmodules
!.editorconfig
!.phpcs.xml.dist
!README.md
!CHANGELOG.md
!composer.json
!composer.lock
!package.json
!vite.config.js
!wp-cli.yml
!Makefile

# Track favicon files, if they exist
!android-chrome-*.png
!apple-touch-icon*.png
!browserconfig.xml
!favicon*.png
!favicon*.ico
!manifest.json
!mstile-*.png
!safari-pinned-tab.svg
!site.webmanifest

# -------------------------
# Src directory rules
# -------------------------

# Allow the src directory
!src/
!src/**


# -------------------------
# App directory rules
# -------------------------

# Allow the app directory
!app/

# Allow app/content and its subdirectories
!app/content/
!app/content/**

# Ignore uploads directory (user files)
app/content/uploads/

# Ignore debug logs
app/content/debug.log


# Ignore all plugins by default
app/content/plugins/*

# Allow specific custom plugins (add your custom plugins here)
# Example: !app/content/plugins/my-custom-plugin/

# Allow index.php protection files
!app/content/plugins/index.php

# Ignore all themes by default
app/content/themes/*

# Allow specific custom themes
!app/content/themes/ntdstheme/

# Allow index.php protection files
!app/content/themes/index.php

# Allow all mu-plugins (typically custom code)
!app/content/mu-plugins/
!app/content/mu-plugins/**

# Allow app root files
!app/.htaccess
!app/index.php
!app/wp-config.php

# Re-ignore Zone.Identifier files (mus
**/*:Zone.Identifier